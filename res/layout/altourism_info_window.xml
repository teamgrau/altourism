<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="400dp"
              android:layout_marginTop="47dp"
              android:layout_marginLeft="10dp"
              android:layout_marginRight="10dp"
              android:paddingLeft="13dp"
              android:paddingTop="13dp"
              android:paddingBottom="63dp"
              android:background="@drawable/altourism_bubble_welcome"
              android:visibility="gone"
              android:orientation="vertical">
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingRight="15dp"
            android:paddingBottom="8dp">
        <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left|top"
                android:ellipsize="end"
                android:singleLine="true"
                android:textColor="@color/black"
                android:textSize="24dp"
                android:textStyle="bold"
                android:text="test title"/>
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:gravity="right|center">
            <ImageView
                    android:id="@+id/close_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:contentDescription="close Button"
                    android:src="@drawable/altourism_hcc_story_x"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left|top"
            android:orientation="horizontal">

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="top"
                android:gravity="top"
                android:id="@+id/share_on"
                android:text="@string/share_on"
                android:textColor="@color/black"
                android:textSize="24dp"/>
        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="top"
                android:paddingLeft="6dp"
                android:src="@drawable/altourism_hcc_social_facebook"
                android:contentDescription="facebook_sign"/>
        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="top"
                android:paddingLeft="6dp"
                android:src="@drawable/altourism_hcc_social_twitter"
                android:contentDescription="twitter_sign"/>

    </LinearLayout>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingRight="18dp">
        <ExpandableListView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
                android:paddingRight="16dp"
                android:overScrollMode="never"
                android:smoothScrollbar="true"
                android:scrollbars="vertical"
                android:fadeScrollbars="false"
                android:verticalScrollbarPosition="right"
                android:scrollbarAlwaysDrawVerticalTrack="true"
                android:scrollbarStyle="outsideInset"
                android:scrollbarTrackVertical="@drawable/scroll_track"
                android:scrollbarThumbVertical="@drawable/scroll_thumb"
                android:listSelector="@android:color/transparent"
                android:groupIndicator="@null"
                android:id="@+id/expandableListView"/>
    </LinearLayout>
</LinearLayout>
